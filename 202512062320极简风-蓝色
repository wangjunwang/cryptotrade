  // --- é…è‰²æ–¹æ¡ˆ 1: ç°ä»£æç®€ (Modern Minimalist) ---
  static readonly background: string = '#F5F7FA'; // ææ·¡å†·ç°è‰²
  static readonly cardBackground: string = '#FFFFFF'; // å¡ç‰‡çº¯ç™½

  static readonly primary: string = '#2D6CDF'; // ç§‘æŠ€è“ (ä¸»è‰²/æŒ‰é’®)
  static readonly primaryLight: string = '#4C84F3'; // ç¨æµ…çš„ç§‘æŠ€è“

  static readonly accentGreen: string = '#48BB78'; // æˆåŠŸ/ç§¯æçŠ¶æ€ - è¾…åŠ©è‰²
  static readonly accentYellow: string = '#F9A825'; // è­¦å‘Š/å¼ºè°ƒè‰²

  static readonly textPrimary: ResourceColor = '#1A202C'; // æ·±ç‚­ç° (é«˜å¯¹æ¯”åº¦)
  static readonly textSecondary: ResourceColor = '#718096'; // ä¸­ç°è‰²
  static readonly textDisabled: string = '#CBD5E0';

  static readonly divider: string = '#E2E8F0';
  static readonly success: string = '#48BB78'; // æˆåŠŸçŠ¶æ€ä½¿ç”¨è¾…åŠ©è‰²
  static readonly warning: string = '#F9A825';
  static readonly danger: string = '#E53E3E'; // å¼ºçƒˆçš„åˆ é™¤çº¢
  static readonly shadow: string = 'rgba(0, 0, 0, 0.08)';
  static readonly inputBg: string = '#EDF2F7'; // æµ…ç°è‰²è¾“å…¥æ¡†

  static readonly classEventBg: string = '#EBF4FF'; // è¯¾ç¨‹äº‹ä»¶èƒŒæ™¯ (æ·¡è“è‰²)
  static readonly inspirationEventBg: string = '#F0FFF4'; // çµæ„Ÿäº‹ä»¶èƒŒæ™¯ (æ·¡ç»¿è‰²)
}

@Builder function IconLeaf(color: ResourceColor, size: number) {
  Stack() { Path().commands('M12 2 C6 2 2 8 2 14 C2 19 6 22 12 22 C18 22 22 19 22 14 C22 8 18 2 12 2 Z M12 22 C12 18 12 14 18 8').fill('none').stroke(color).strokeWidth(2).width(size).height(size) }.width(size).height(size)
}

@Builder function IconSend(color: ResourceColor, size: number) {
  Stack() { Path().commands('M2 21 L23 12 L2 3 L2 10 L17 12 L2 14 L2 21 Z').fill(color).width(size).height(size) }.width(size).height(size)
}

